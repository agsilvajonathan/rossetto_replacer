{
  "name": "Rossetto Formatter",
  "version": "1.1",
  "description": "Change every image and background into Bruno Rossetto image",
  "content_scripts": [
    {
	    "matches": ["<all_urls>"],
	    "run_at": "document_end",
	    "js": ["replacer.js"],
	    "all_frames": true
	  }
  ],
  "page_action": {
    "default_icon": {
      "16": "icons/rosto16.png",
      "32": "icons/rosto32.png"
    }
  },
  "icons": {
    "16": "icons/rosto16.png",
    "32": "icons/rosto32.png"
  },
  "permissions": ["storage"],
  "manifest_version": 3
}
